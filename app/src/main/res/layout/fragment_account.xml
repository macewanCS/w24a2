<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".account">

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:contentDescription="@string/account_profile_picture_desc"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/gradeLevel"
        android:layout_width="186dp"
        android:layout_height="31dp"
        android:text="@string/account_grade_text"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subjects"
        android:layout_width="242dp"
        android:layout_height="36dp"
        android:text="@string/account_subjects_text"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/createSession"
        android:layout_width="327dp"
        android:layout_height="65dp"
        android:text="@string/account_create_session_button"
        android:textColor="@color/white"
        android:textScaleX="1.10"
        android:textSize="22sp"
        app:backgroundTint="#1F0EBC" />

    <Button
        android:id="@+id/personalInformation"
        android:layout_width="327dp"
        android:layout_height="65dp"
        android:text="@string/personal_information"
        android:textColor="@color/white"
        android:textScaleX="1.10"
        android:textSize="22sp"
        app:backgroundTint="@color/blue"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/availability"
        android:layout_width="327dp"
        android:layout_height="65dp"
        android:text="@string/availability"
        android:textColor="@color/white"
        android:textScaleX="1.10"
        android:textSize="22sp"
        app:backgroundTint="@color/blue"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/sessions"
        android:layout_width="327dp"
        android:layout_height="65dp"
        android:text="@string/account_sessions_button"
        android:textColor="@color/white"
        android:textScaleX="1.10"
        android:textSize="22sp"
        app:backgroundTint="@color/blue"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/logout"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="#10355E" />

    <include
        android:id="@+id/bottomToolbar"
        layout="@layout/bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"  />

</LinearLayout>