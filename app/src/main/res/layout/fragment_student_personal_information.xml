<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentPersonalInformation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="10dp"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Personal Information"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/account_back_btn"/>

        <ImageButton
            android:id="@+id/account_back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_arrow_icon"
            app:tint="@color/white"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </RelativeLayout>

        <ImageView
    android:id="@+id/profilepic1"
    android:layout_width="109dp"
    android:layout_height="99dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="147dp"
    android:layout_marginEnd="155dp"
    android:layout_marginBottom="578dp"
    android:contentDescription="@string/account_profile_picture_desc"
    tools:src="@tools:sample/avatars" />

    <EditText
    android:id="@+id/displayMessage"
    android:layout_width="338dp"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="34dp"
    android:layout_marginBottom="532dp"
    android:ems="10"
    android:inputType="text"
    android:text="Update your personal information below" />

    <TextView
        android:id="@+id/studentFullName"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="480dp"
        android:text="Full Name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/studentEditFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="433dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Edit Full Name" />

    <TextView
        android:id="@+id/studentEmail"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="387dp"
        android:text="Email"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/studentEditEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="340dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false" />

    <TextView
        android:id="@+id/studentPassword"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="299dp"
        android:text="Password"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/studentEditTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="250dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/studentPhoneNumber"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="204dp"
        android:text="Phone Number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/studentEditPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="156dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Edit Full Name"/>

    <Button
        android:id="@+id/studentPersonalInformationBtn"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="75dp"
        android:text="Save Changes"
        android:textColor="@color/white"
        android:textScaleX="1.10"
        android:textSize="16sp"
        app:backgroundTint="#1F0EBC" />


</RelativeLayout>