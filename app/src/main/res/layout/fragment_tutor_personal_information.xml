<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorPersonalInformation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="10dp"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Personal Information"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/account_back_btn"/>

        <ImageButton
            android:id="@+id/account_back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_arrow_icon"
            app:tint="@color/white"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="109dp"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="578dp"
        android:contentDescription="@string/account_profile_picture_desc"
        tools:src="@tools:sample/avatars" />

    <EditText
        android:id="@+id/displayMessage1"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="532dp"
        android:ems="10"
        android:inputType="text"
        android:text="Update your personal information below" />

    <TextView
        android:id="@+id/tutorFullName"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="480dp"
        android:ems="10"
        android:text="Full Name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tutorEditFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="430dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Edit Full Name"
        android:text="" />

    <TextView
        android:id="@+id/tutorEmail"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="394dp"
        android:ems="10"
        android:text="Email"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tutorEditEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="342dp"
        android:ems="10"
        android:hint="Edit Email Address"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/tutorPassword"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="302dp"
        android:text="Password"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tutorEditTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="251dp"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tutorPhoneNumber"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="204dp"
        android:text="Phone Number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tutorEditPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="142dp"
        android:ems="10"
        android:hint="Edit Phone Number"
        android:inputType="phone" />

    <Button
        android:id="@+id/tutorPersonalInformationBtn"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="62dp"
        android:text="Save Changes"
        android:textColor="@color/white"
        android:textScaleX="1.10"
        android:textSize="16sp"
        app:backgroundTint="#1F0EBC" />


</RelativeLayout>